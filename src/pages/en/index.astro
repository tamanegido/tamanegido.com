---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import HelloWorld from '../../components/react/HelloWorld';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import { getTranslations } from '../../i18n';

const t = getTranslations('en');
---

<Layout
	title={t.site.title}
	description={t.site.description}
	lang="en"
>
	<main>
		<LanguageSwitcher currentLang="en" currentPath={Astro.url.pathname} />
		<a href="/en/"><h1><img src="/assets/top.png" alt={t.alt.icon} class="icon" /></h1></a>
		<div class="instructions">
			<img src="/assets/logo.png" alt={t.alt.logo} class="logo" />
			<HelloWorld client:load />
			<p><strong>{t.site.title}BOOKS TAMANEGIDO</strong> {t.home.owner} <a href="https://twitter.com/hisasann" target="_blank">{t.home.ownerLink}</a>{t.home.ownerSuffix}</p>
			<p>{t.home.onlineOnly}</p>
			<p>{t.home.hope}</p>
			<p>{t.home.books}</p>
			<p>{t.home.diary} <a href="https://hisasann.notion.site/4b3ac4a874724e20ab7d5b87edd9af22?v=f783121b5c074b72bff893c7cda511da">{t.home.diaryLink}</a></p>
		</div>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://tamanegido.base.shop/"
				title={t.cards.onlineShop.title}
				body={t.cards.onlineShop.body}
			/>
			<Card
				href="https://twitter.com/tamanegido"
				title={t.cards.twitter.title}
				body={t.cards.twitter.body}
			/>
			<Card
				href="https://www.instagram.com/tamanegido/"
				title={t.cards.instagram.title}
				body={t.cards.instagram.body}
			/>
			<Card
				href="https://www.youtube.com/channel/UCuW0vL4xZAqNzsZ51RqLeaw"
				title={t.cards.youtube.title}
				body={t.cards.youtube.body}
			/>
			<Card
				href="https://www.tiktok.com/@tamanegido"
				title={t.cards.tiktok.title}
				body={t.cards.tiktok.body}
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}

	.icon {
		max-width: 50%;
		height: auto;
	}
	.logo {
		max-width: 100%;
		height: auto;
	}
	.hakohabu {
		max-width: 100%;
		height: auto;
	}
</style>

